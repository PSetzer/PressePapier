        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid Background="{DynamicResource ScrollBkgGrd}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
