<Window x:Class="PressePapier.View.PressePapierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:PressePapier.ViewModel"
        Title="PressePapier" Visibility="{Binding AppVisibility, Mode=TwoWay}" WindowStyle="None" BorderThickness="0" AllowDrop="True" AllowsTransparency="True" ResizeMode="CanMinimize" MouseLeftButtonDown="Window_MouseLeftButtonDown" Background="#FFE6E6E6" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="598" Width="418" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" Name="PressePapier" StateChanged="Window_StateChanged" Deactivated="Window_Deactivated" Activated="Window_Activated">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ButtonStyle.xaml"/>
                <ResourceDictionary Source="../Resources/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="../Resources/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="../Resources/RadioButtonStyle.xaml"/>
                <ResourceDictionary Source="../Resources/Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <viewmodel:PressePapierWindowVM/>
    </Window.DataContext>
    
    <Grid Name="windowGrid">
        <Border BorderBrush="#FF084DB4" BorderThickness="2" Height="30" HorizontalAlignment="Left" Margin="0,519,0,0" Name="border1" VerticalAlignment="Top" Width="292" />
        <Button Name="btnEnregistrer" Style="{StaticResource BoutonAction}" Height="50" Margin="59,66,0,0" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="14" FontStretch="Normal" BorderBrush="White" Foreground="White" Click="btnEnregistrer_Click" HorizontalAlignment="Left" Width="97" Background="#FF084DB4" Content="Enregistrer"></Button>
        <Button Name="btnCharger" Style="{StaticResource BoutonAction}" Height="50" Margin="262,66,0,0" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="14" FontStretch="Normal" BorderBrush="White" Foreground="White" HorizontalAlignment="Left" Width="97" Click="btnCharger_Click" Background="#FF084DB4" Content="Charger"></Button>
        <Button Name="btnRecharger" Style="{StaticResource BoutonAction}" BorderBrush="White" FontFamily="Trebuchet MS" FontSize="14" FontStretch="Normal" FontWeight="Bold" Foreground="White" Height="50" HorizontalAlignment="Left" Margin="262,119,0,0" VerticalAlignment="Top" Width="97" Background="#FF084DB4" Content="Recharger" Click="btnCharger_Click"></Button>
        <Button Name="btnEffacer" Command="{Binding EffacerTextesCommand}" Style="{StaticResource BoutonAction}" BorderBrush="White" FontFamily="Trebuchet MS" FontSize="14" FontStretch="Normal" FontWeight="Bold" Foreground="White" Height="50" HorizontalAlignment="Left" Margin="159,119,0,0" VerticalAlignment="Top" Width="100" Background="#FF084DB4" Content="Effacer"></Button>
        <Button Name="btnEnregSous" Style="{StaticResource BoutonAction}" BorderBrush="White" FontFamily="Trebuchet MS" FontSize="14" FontStretch="Normal" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Margin="59,119,0,0" Width="97" Height="50" VerticalAlignment="Top" Background="#FF084DB4" Click="btnEnregistrer_Click">
            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Height="30" Width="97">Enregistrer<LineBreak/>sous</TextBlock>
        </Button>
        <Button Name="btnMinimiser" Style="{StaticResource BoutonToolBox}" Content="_" Height="36" Margin="0,-1,29,0" VerticalAlignment="Top" Background="#FFF0F0F0" BorderBrush="#FFF0F0F0" Foreground="#FF0066CC" FontFamily="Trebuchet MS" FontSize="22" FontWeight="Bold" Click="btnMinimiser_Click" BorderThickness="0" HorizontalAlignment="Right" Width="19" />
        <Button Name="btnFermer" Style="{StaticResource BoutonToolBox}" Content="x" Height="33" HorizontalAlignment="Right" Margin="0,2,7,0" VerticalAlignment="Top" Width="22" FontFamily="Trebuchet MS" FontSize="22" FontWeight="Bold" Background="#FFF0F0F0" BorderBrush="#FFF0F0F0" Foreground="#FF0066CC" Click="btnFermer_Click" />
        <Grid Height="50" HorizontalAlignment="Left" Margin="159,66,0,0" Name="grdModif" VerticalAlignment="Top" Width="100" Background="#FF084DB4">
            <RadioButton Name="rbAlt" Command="{Binding ModifToucheRaccourciCommand}" CommandParameter="rbAlt" IsChecked="{Binding IsRbAltChecked, Mode=TwoWay}" Style="{StaticResource ModifRadioButton}" Content="Alt" Height="20" HorizontalAlignment="Left" Margin="52,25,0,0" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="White" Width="40" />
            <RadioButton Name="rbCtrl" Command="{Binding ModifToucheRaccourciCommand}" CommandParameter="rbCtrl" IsChecked="{Binding IsRbCtrlChecked, Mode=TwoWay}" Style="{StaticResource ModifRadioButton}" Content="Ctrl" Height="20" Width="40" Margin="8,25,0,0" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <Label Content="Modifieur" Height="28" HorizontalAlignment="Left" Margin="13,1,0,0" Name="lblModif" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="White" />
        </Grid>
        <ScrollViewer Style="{DynamicResource ScrollViewerGrd}" Height="335" HorizontalAlignment="Left" Margin="2,203,0,0" Name="svTextBox" VerticalAlignment="Top" Width="394" VerticalScrollBarVisibility="Auto">
            <Grid Height="335" Name="grdTextBox" Width="394" VerticalAlignment="Top" >
                <Label Content="1" Height="28" HorizontalAlignment="Left" Margin="31,-6,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="2" Height="28" HorizontalAlignment="Left" Margin="31,29,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="3" Height="28" HorizontalAlignment="Left" Margin="31,64,0,0" Name="label3" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="4" Height="28" HorizontalAlignment="Left" Margin="31,99,0,0" Name="label4" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="5" HorizontalAlignment="Left" Margin="31,134,0,0" Name="label5" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" Height="28" VerticalAlignment="Top" />
                <Label Content="6" Height="28" HorizontalAlignment="Left" Margin="31,169,0,0" Name="label6" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="7" Height="28" HorizontalAlignment="Left" Margin="31,204,0,0" Name="label7" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="8" Height="28" HorizontalAlignment="Left" Margin="31,239,0,0" Name="label8" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="9" Height="28" HorizontalAlignment="Left" Margin="31,274,0,0" Name="label9" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <Label Content="10" Height="28" HorizontalAlignment="Left" Margin="21,309,0,0" Name="label10" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="18" FontWeight="Bold" />
                <StackPanel Height="20" HorizontalAlignment="Left" Margin="59,0,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="300">
                    <TextBox Text="{Binding TextTB1, Mode=TwoWay}" Style="{StaticResource CopyPasteTextbox}" AcceptsReturn="True" Name="textBox1" VerticalScrollBarVisibility="Auto" Width="300" Height="20" TextWrapping="Wrap" FontSize="13" TextChanged="textBox_TextChanged" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel2" Width="300" Margin="59,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB2, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox2" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel3" Width="300" Margin="59,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB3, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox3" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel4" Width="300" Margin="59,105,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB4, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox4" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel5" Width="300" Margin="59,140,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB5, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox5" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel6" Width="300" Margin="59,175,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB6, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox6" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel7" Width="300" Margin="59,210,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB7, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox7" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel8" Width="300" Margin="59,245,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB8, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox8" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel9" Width="300" Margin="59,280,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB9, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox9" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
                <StackPanel Height="20" Name="stackPanel10" Width="300" Margin="59,315,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBox Text="{Binding TextTB10, Mode=TwoWay}" AcceptsReturn="True" FontSize="13" Height="20" Name="textBox10" Style="{StaticResource CopyPasteTextbox}" TextChanged="textBox_TextChanged" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Width="300" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <TextBlock Name="txtbFichierEnCours" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="Black" ToolTip="" ToolTipOpening="txtbFichierEnCours_ToolTipOpening">lblFichierEnCours</TextBlock>
        <Label x:Name="lblNotifEnreg" Content="Enregistrement effectué" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="155" FontFamily="Trebuchet MS" FontSize="13"/>
    </Grid>
</Window>
